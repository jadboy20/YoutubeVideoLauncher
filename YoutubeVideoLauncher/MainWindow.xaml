<Window x:Class="YoutubeVideoLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeVideoLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="459" Width="525">
    <StackPanel Margin="0,0,0,7">
        <Grid Height="60">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="115*"/>
                <ColumnDefinition Width="402*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="Images/Youtube.png"/>
            <TextBlock Text="Video Launcher" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" FontFamily="Bauhaus 93" Foreground="#EE22FF" Height="44" Margin="25,8,10,8" Width="367"/>


        </Grid>
        <!-- We will put a text box and button for the search. -->
        <TextBox Text="Put your search in here..." Margin="100,10,100,0"/>
        <Button Content="Search" Margin="100,4,100,4" x:Name="SearchButton" Click="SearchButton_Click"/>
        <ListBox x:Name="videoList"  MouseDoubleClick="videoList_MouseDoubleClick">
            
        </ListBox>
    </StackPanel>
</Window>
